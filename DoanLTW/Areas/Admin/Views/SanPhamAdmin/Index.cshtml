@model IEnumerable<ShopConnection.SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<h2>Index của SP</h2>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: center;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2
    }

    th {
        background-color: #04AA6D;
        color: white;
    }
</style>
<h2>QUẢN LÝ NHÀ SẢN XUẤT</h2>
<table>
    <tr>
        <th>Mã Nhà Sản Xuất</th>
        <th>Tenn Nhà Sản Xuất</th>
        <th>Hình Ảnh</th>
        <th>Tình Trạng</th>
        <th colspan="2">
            <a href="@Url.Action("Create","SanPhamAdmin")"><img src="~/Asset/images/addnsxx.png" /></a>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaSanPham</td>
            <td>@item.TenSanPham</td>
            <td>@item.TinhTrang</td>
            <td><img src="~/Asset/img/@item.HinhChinh" style="width:50px; height:70px"></td>
            <td><a href="@Url.Action("Edit","SanPhamAdmin", new { id = @item.MaSanPham})"><img src="~/Asset/images/edit.png" /></a> </td>
            <td><a href="@Url.Action("Delete","SanPhamAdmin", new {id =item.MaSanPham })"><img src="~/Asset/images/delete1.png" /></a> </td>
        </tr>
    }


</table>
